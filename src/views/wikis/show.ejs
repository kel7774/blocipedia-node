<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1><%= wiki.title %></h1>

      <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>

    
      <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>

      <p><%- wiki.body %></p>

      <h4>Collaborators</h4>

      <% if(wiki.collaborators.length == 0) {%>
        <p>No Collaborators</p>
      <% } else { %>
        <a href="/wikis/<%= wiki.id %>/collaborators" class='float-left'>
          <% wiki.collaborators.forEach((user) => { %>
            &nbsp<%= user.collabName %>&nbsp|
          <% }) %>
        </a>
      <% } %>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>